folder-hook 'contact@jakubpawlowicz.com' 'source ~/.mutt/contact@jakubpawlowicz.com/muttrc'
folder-hook 'servers@jakubpawlowicz.com' 'source ~/.mutt/servers@jakubpawlowicz.com/muttrc'
folder-hook 'jakub@goalsmashers.com' 'source ~/.mutt/jakub@goalsmashers.com/muttrc'

macro attach E <save-entry><kill-line>/home/jakub/Downloads/<enter>y<enter>
macro index E <change-folder>=Sent<enter>
macro index I <change-folder>=INBOX<enter>
macro index S <copy-message><kill-line>=Spam<enter>y<delete-message>
macro index <F2> '<sync-mailbox><enter-command>source /home/jakub/.mutt/contact@jakubpawlowicz.com/muttrc<enter><change-folder>!<enter>'
macro index <F3> '<sync-mailbox><enter-command>source /home/jakub/.mutt/servers@jakubpawlowicz.com/muttrc<enter><change-folder>!<enter>'
macro index <F4> '<sync-mailbox><enter-command>source /home/jakub/.mutt/jakub@goalsmashers.com/muttrc<enter><change-folder>!<enter>'

set connect_timeout=5
set editor=vi
set imap_keepalive=120
set mail_check=60
set move=no
set sort=reverse-date-received
set ssl_force_tls=yes
set ssl_starttls=yes

source "$HOME/.mutt/contact@jakubpawlowicz.com/muttrc"
